@model HelpDesk.Entities.Dtos.PhotoDto
@{
    ViewData["Title"] = "Home Page";
}





<div class="row">
    <div class="container">
        <div class="col-md-12">
            <div class="card mt-3">
                <div class="modal-content">
                    <div class="card-header"><h5>Arıza Talep Oluşturma </h5></div>
                    <div class="modal-body">
                        <form asp-action="Add" id="form-ticket-add" enctype="multipart/form-data">
                            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>
                            <div class="form-group">
                                <label asp-for="Ticket.Title">Talep Başlık</label>
                                <input class="form-control" asp-for="Ticket.Title" placeholder="Arıza Talep Başlığı" />
                                <span class="text-danger" asp-validation-for="Ticket.Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ticket.Description">Açıklama</label>
                                <textarea id="summernote" class="form-control" asp-for="Ticket.Description"></textarea>
                                <span class="text-danger" asp-validation-for="Ticket.Description"></span>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-primary" id="btnSaveTicket">Arıza Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" crossorigin="anonymous"></script>
<script>
    $('#summernote').summernote({
        placeholder: 'Talep içeriğini girebilirsiniz...',
        tabsize: 2,
        height: 220,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
@section Scripts
{
    <script src="~/js/ticketIndex.js" type="application/ecmascript"></script>
}
